---
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='author' content='Joaquín Arias' />
    <meta
      name='description'
      content='Juego sencillo en el que tienes que adivinar la celebridad o famoso a partir de una imagen del mismo pero pixelada. También puedes pedir una pista.'
    />
    <meta
      name='keywords'
      content='juego, adivinar, celebridad, famoso, pixelada, pista, cloudinary'
    />
    <meta property='og:title' content='Adivina la celebridad' />
    <meta
      property='og:description'
      content='Juego sencillo en el que tienes que adivinar la celebridad o famoso a partir de una imagen del mismo pero pixelada. También puedes pedir una pista.'
    />
    <meta name='og:url' content='https://adivina-la-celebridad.vercel.app/' />
    <meta name='og:site_name' content='AdivinaLaCelebridad' />
    <meta name='og:type' content='website' />
    <meta name='og:locale' content='es_ES' />
    <meta name='robots' content='index, follow' />
    <meta name='googlebot' content='index, follow' />
    <title>{title}</title>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Anton&family=Poppins:wght@400;500;600&display=swap'
      rel='stylesheet'
    />
  </head>
  <body
    class='min-h-screen max-w-6xl m-auto px-5 flex flex-col justify-between'
  >
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    font-family: 'Poppins', sans-serif;
  }
  body {
    background-image: url('/bg.svg');
    background-size: cover;
  }
  h1 {
    font-family: 'Anton', sans-serif;
  }
</style>
