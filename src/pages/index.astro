---
import GameSection from '../components/GameSection';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Adivina la celebridad'>
  <header class='text-center mb-6'>
    <h1 class='text-6xl font-bold text-[#55E6C1]'>Adivina la celebridad</h1>
  </header>
  <main class='text-center flex flex-col gap-6'>
    <GameSection client:load />
  </main>
  <footer class='fixed bottom-0 right-0 left-0 m-auto py-2'>
    <p class='text-center text-gray-500 text-sm'>
      Imágenes pixeladas con <a
        href='https://cloudinary.com/'
        target='_blank'
        rel='noreferer'
        class='underline'>Cloudinary</a
      >. Pistas por <a
        href='https://wikipedia.com/'
        target='_blank'
        rel='noreferer'
        class='underline'>Wikipedia</a
      >
    </p>
    <p class='text-center text-gray-500 text-sm'>
      Hecho con <a
        href='https://astro.build/'
        target='_blank'
        rel='noreferer'
        class='underline'>Astro</a
      > por
      <a
        href='https://github.com/joaquinarias989'
        class='font-bold text-gray-400'
      >
        Joaquín Arias 🙍🏽‍♂️
      </a>
    </p>
  </footer>
</Layout>
